@model IEnumerable<SysorovShop.Models.User>

@{
    ViewBag.Title = "ListUsers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Список пользователей</h2>
<p>

    @Html.ActionLink("Добавить пользователя", "InsertUser", null, new { @class = "delete" })
</p>

<table class="table">
    <thead>
        <tr>
            <th class="text-right">Имя</th>
            <th class="text-right">Фамилия</th>
            <th class="text-right">Адрес электронной почты</th>
            <th class="text-right">Логин</th>
            @*<th class="text-right">Пароль</th>*@
            <th class="text-right">Статус</th>

        </tr>
    </thead>
    <tbody>
        @foreach (SysorovShop.Models.User user in Model)
        {
            <tr>
                <td class="text-right">@user.FirstName</td>
                <td class="text-right">@user.LastName</td>
                <td class="text-right">@user.Email</td>
                <td class="text-right">@user.Username</td>
                @*<td class="text-right">@user.Password</td>*@
                @if (user.StatusID == "1")
                {
                    <td class="text-right">Администратор</td>
                }
                @if (user.StatusID == null)
                {
                    <td class="text-right">Пользователь</td>
                }
                @*<td class="text-right">@user.StatusID</td>*@

                <td>
                    @Html.ActionLink("Редактировать", "EditUser", new { id = user.Id }, new { @class = "editUser" })
                    @Html.ActionLink("Удалить", "DeleteUser", new { id = user.Id }, new { @class = "deleteUser" })

                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5" class="text-right"></td>
            <td colspan="6">
            <a href="/Admin/Index" class="button-back">Вернуться обратно</a></td>
        </tr>
    </tfoot>
</table>

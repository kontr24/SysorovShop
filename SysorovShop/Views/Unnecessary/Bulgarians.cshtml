    <style>
        .item div > span {
            font-weight: bold;
        }

        .item {
            border: 1px solid red;
            width: 300px;
            border-radius: 5px;
            /* width: 300px;*/
        }
            .item:hover {
                border-color: green;
            }

        .description > span {
            font-weight: bold;
        }

        .description {
            border: 1px solid red;
            width: 300px;
            border-radius: 5px;
            display: flex;
            flex-wrap: wrap-reverse;
        }
        .grid-item {
            display: flex;
            flex-wrap: wrap;
        }
    </style>

